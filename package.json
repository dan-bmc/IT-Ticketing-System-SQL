{
  "name": "it-ticketing",
  "version": "1.2.0",
  "description": "IT Helpdesk System",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --dir=false",
    "dev": "electron . --dev",
    "dist": "electron-builder --publish=never --dir=false",
    "publish": "electron-builder --publish=always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dan-bmc/IT-Ticketing-System-SQL.git"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "mssql": "^10.0.1"
  },
  "build": {
    "appId": "com.shahidan.it-app",
    "productName": "IT Help Desk",
    "directories": {
      "output": "Installer"
    },
    "files": [
      "src/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "dan-bmc",
        "repo": "IT-Ticketing-System-SQL",
        "releaseType": "release"
      }
    ],
    "win": {
      "icon": "src/assets/chat.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "src/assets/chat.ico",
      "uninstallerIcon": "src/assets/chat.ico",
      "installerHeaderIcon": "src/assets/chat.ico",
      "deleteAppDataOnUninstall": true
    },
    "removePackageScripts": true,
    "npmRebuild": false,
    "mac": {
      "icon": "src/assets/chat.icns"
    },
    "linux": {
      "icon": "assets/chat.png"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs"
}
